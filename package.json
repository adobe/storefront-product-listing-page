{
  "private": true,
  "name": "@adobe/storefront-product-listing-page",
  "version": "1.0.0",
  "license": "MIT",
  "typings": "./dist/@types/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "prebuild": "yarn cleanup",
    "build": "webpack --config webpack.prod.js",
    "build:stage": "webpack --config webpack.prod.js",
    "build:qa": "webpack --config webpack.qa.js",
    "build:dev": "webpack --config webpack.dev.js",
    "build:coverage": "webpack --config webpack.coverage.js",
    "coverage:e2e": "nyc --reporter=text-summary cross-env NODE_ENV=test yarn test:e2e",
    "coverage:e2e:headless": "nyc --reporter=text-summary cross-env NODE_ENV=test yarn test:e2e:headless",
    "cover:report": "nyc report --reporter=lcov --reporter=text",
    "dev": "webpack-dev-server --config webpack.dev.js",
    "dev:coverage": "webpack-dev-server --config webpack.coverage.js",
    "analyze": "ANALYZE=true yarn build",
    "storybook": "concurrently --names \"TAILWIND,SB\" \"npm run dev:css\" \"start-storybook -p 6006 --quiet --disable-telemetry\"",
    "build-storybook": "build-storybook",
    "preserve": "yarn cleanup",
    "serve": "webpack serve --mode=production",
    "lint": "eslint '*/**/*.{ts,tsx}'",
    "lint:fix": "eslint '*/**/*.{ts,tsx}' --fix",
    "prettier:fix": "prettier 'src/**/*.{ts,tsx,json,md}' --write",
    "lint:staged": "lint-staged",
    "test": "jest --passWithNoTests --color --silent",
    "test:e2e": "cypress open --browser chrome --config-file cypress.config.js",
    "test:e2e:headless": "cypress run --browser chrome --config-file cypress.config.js",
    "cleanup": "rimraf dist"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.{ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "browser": {
    "[module-name]": false
  },
  "nyc": {
    "extends": "nyc-config-tsx",
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "instrument": true,
    "all": true,
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage",
    "exclude": [
      ".storybook/**/*"
    ],
    "parser-plugins": [
      "jsx",
      "asyncGenerators",
      "bigInt",
      "classProperties",
      "classPrivateProperties",
      "dynamicImport",
      "importMeta",
      "objectRestSpread",
      "optionalCatchBinding"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.7.2",
    "currency-symbol-map": "^5.1.0",
    "preact": "^10.17.1",
    "storybook": "^7.3.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@adobe/magento-storefront-events-sdk": "^1.4.0",
    "@babel/core": "^7.19.6",
    "@babel/plugin-transform-zssx": "^7.19.0",
    "@cypress/code-coverage": "^3.10.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.9",
    "@sentry/types": "^7.52.1",
    "@storybook/addon-a11y": "^7.3.2",
    "@storybook/addon-actions": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/builder-webpack5": "^7.3.2",
    "@storybook/manager-webpack5": "^6.5.7",
    "@storybook/preact": "^7.3.2",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/preact": "^3.2.3",
    "@types/jest": "^29.5.0",
    "@types/uuid": "^9.0.2",
    "autoprefixer": "^10.4.13",
    "babel-plugin-istanbul": "^6.1.1",
    "babel-plugin-tsconfig-paths": "^1.0.3",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cssnano": "^6.0.1",
    "cypress": "^12.4.0",
    "cypress-grep": "~2.13.1",
    "danger": "^11.2.8",
    "eslint": "^8.48.0",
    "eslint-plugin-cypress": "^2.12.1",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "franc-min": "~6.1.0",
    "glob": "~10.3.3",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.1",
    "jest-preset-preact": "^4.0.5",
    "jest-styled-components": "^7.1.1",
    "jimp": "~0.22.10",
    "lint-staged": "^14.0.1",
    "mochawesome": "~7.1.3",
    "mochawesome-merge": "~4.3.0",
    "nyc": "^15.1.0",
    "nyc-config-tsx": "^0.1.0",
    "postcss": "^8.4.19",
    "postcss-import": "^15.0.0",
    "postcss-loader": "^7.0.1",
    "preact-svg-loader": "^0.2.1",
    "preact-render-to-string": "^5.1.4",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "style-loader": "^3.3.1",
    "styled-components": "^5.3.6",
    "tailwindcss": "^3.2.4",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^5.0.4",
    "typescript-plugin-styled-components": "^3.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.11.1",
    "yargs": "~17.7.2"
  }
}
