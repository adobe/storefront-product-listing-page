{
  "private": true,
  "name": "@adobe/storefront-product-listing-page",
  "version": "1.0.1",
  "license": "MIT",
  "typings": "./dist/@types/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "npx tailwindcss  -i ./src/styles/tokens.css -o ./src/styles/index.css; webpack --config webpack.prod.js",
    "build:stage": "npx tailwindcss  -i ./src/styles/tokens.css -o ./src/styles/index.css; webpack --config webpack.prod.js",
    "build:qa": "npx tailwindcss  -i ./src/styles/tokens.css -o ./src/styles/index.css; webpack --config webpack.qa.js",
    "build:dev": "npx tailwindcss  -i ./src/styles/tokens.css -o ./src/styles/index.css; webpack --config webpack.dev.js",
    "build:coverage": "npx tailwindcss  -i ./src/styles/tokens.css -o ./src/styles/index.css; webpack --config webpack.coverage.js",
    "coverage:e2e": "nyc --reporter=text-summary cross-env NODE_ENV=test yarn test:e2e",
    "cover:integration": "nyc --reporter=text-summary cross-env NODE_ENV=test START_SERVER_AND_TEST_INSECURE=1 start-server-and-test 'node server-test.js' http://localhost:8080/v1/ cy:run:chrome",
    "cy:run:chrome": "CHOKIDAR_IGNORED='/node_modules/' NO_COLOR=1 NO_COLOR=1 cypress run --headless --browser chrome",
    "start:coverage": "webpack-dev-server --config webpack.coverage.js & wait-on http://localhost:8080/v1 20",
    "cover:report": "nyc report --reporter=lcov --reporter=text",
    "dev": "npx tailwindcss  -i ./src/styles/tokens.css -o ./src/styles/index.css; webpack-dev-server --config webpack.dev.js",
    "dev:coverage": "webpack serve --config webpack.coverage.js",
    "analyze": "ANALYZE=true yarn build",
    "storybook": "npx tailwindcss  -i ./src/styles/tokens.css -o ./src/styles/index.css; storybook dev -p 6006",
    "build-storybook": "npx tailwindcss  -i ./src/styles/global.css -o ./dist/index.css; build-storybook",
    "server-test": "node server-test.js",
    "lint": "eslint '*/**/*.{ts,tsx}'",
    "lint:fix": "eslint '*/**/*.{ts,tsx}' --fix",
    "prettier:fix": "prettier 'src/**/*.{ts,tsx,json,md}' --write",
    "lint:staged": "lint-staged",
    "test": "jest --passWithNoTests --color --silent",
    "test:e2e": "cypress open --browser chrome --config-file cypress.config.js",
    "test:e2e:headless": "cypress run --browser chrome --config-file cypress.config.js",
    "cleanup": "rimraf dist"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.{ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "browser": {
    "[module-name]": false
  },
  "nyc": {
    "extends": "nyc-config-tsx",
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "instrument": true,
    "all": false,
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage",
    "exclude": [
      ".storybook/**/*",
      "node_modules/**/*"
    ],
    "parser-plugins": [
      "jsx",
      "asyncGenerators",
      "bigInt",
      "classProperties",
      "classPrivateProperties",
      "dynamicImport",
      "importMeta",
      "objectRestSpread",
      "optionalCatchBinding"
    ]
  },
  "resolutions": {
    "wrap-ansi": "7.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "currency-symbol-map": "^5.1.0",
    "preact": "^10.18.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@adobe/magento-storefront-events-sdk": "^1.5.3",
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-react-jsx": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@cypress/code-coverage": "^3.12.1",
    "@sentry/types": "^7.72.0",
    "@storybook/addon-a11y": "^7.4.5",
    "@storybook/addon-actions": "^7.4.5",
    "@storybook/addon-essentials": "^7.4.5",
    "@storybook/addon-interactions": "^7.4.5",
    "@storybook/addon-links": "^7.4.5",
    "@storybook/blocks": "^7.4.5",
    "@storybook/preact": "^7.4.5",
    "@storybook/preact-webpack5": "^7.4.5",
    "@storybook/testing-library": "^0.2.1",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.6",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/preact": "^3.2.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.1",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "autoprefixer": "^10.4.16",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-istanbul": "^6.1.1",
    "babel-plugin-tsconfig-paths": "^1.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "cypress": "^13.3.0",
    "cypress-grep": "~2.13.1",
    "eslint": "^8.50.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.14",
    "express": "^4.18.2",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-preset-preact": "^4.1.0",
    "jest-styled-components": "^7.1.1",
    "jest-transformer-svg": "^2.0.1",
    "lint-staged": "^14.0.1",
    "nyc": "^15.1.0",
    "nyc-config-tsx": "^0.1.0",
    "postcss": "^8.4.30",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.3.3",
    "preact-render-to-string": "5.2.6",
    "preact-svg-loader": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "start-server-and-test": "^2.0.1",
    "storybook": "^7.4.5",
    "style-loader": "^3.3.3",
    "styled-components": "^6.0.8",
    "tailwindcss": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.2.2",
    "typescript-plugin-styled-components": "^3.0.0",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^6.1.1",
    "webpack-dev-server": "^4.15.1",
    "yargs": "~17.7.2"
  }
}
